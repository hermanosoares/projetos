		<persistence:managed-persistence-context name="em" auto-create="true"
		entity-manager-factory="#{jiniPU}"/>
	-->

	<security:identity authenticate-method="#{authenticator.login}" />
	
	<factory name="httpServletRequest" auto-create="true"
		value="#{facesContext.externalContext.request}" />
		
	<factory name="response" auto-create="true"
		value="#{facesContext.externalContext.response}" />
		
	<factory name="applicationMap" auto-create="true"
		value="#{facesContext.externalContext.applicationMap}" />

