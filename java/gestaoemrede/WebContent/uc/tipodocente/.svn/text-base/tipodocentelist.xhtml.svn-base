<?xml version="1.0" encoding="ISO-8859-1"?> 
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:a4j="http://richfaces.org/a4j">

	<ui:composition template="/template.xhtml">

	<ui:define name="navegacao">
		 <div id="topoBotao">
				<h:commandButton styleClass="botaoNavegacao" image="/img/incluirVerde.jpg" value="inserir" action="#{TipoFuncaoDocenteService.insere}" >
				</h:commandButton>
		</div>
	</ui:define>

	
		<ui:define name="conteudo">
		
		<h:outputText value="nenhum tipo de cargo docente encontrado." rendered="#{empty TipoFuncaoList.tiposFuncao}" />
		
		<rich:dataTable style="width:750px;" value="#{TipoFuncaoList.tiposFuncao}" rowClasses="ClasseCss2,ClasseCss1" var="item" rendered="#{TipoFuncaoList.tiposFuncao.size>0}">


			<rich:column style="width:500px;"> 
				<f:facet name="header">
					<h:outputText value="Tipo Docente/Cargo" />
				</f:facet>
				<h:outputText value="#{item.nome}" />
			</rich:column>


			<h:column headerClass="removerEditar">
				<f:facet name="header">
					<h:outputText value="Editar" />
				</f:facet>
					
				<h:commandButton  image="/img/editar.png" id="btnEditar" action="#{TipoFuncaoDocenteService.edita(item)}" style="width:20px; height:20px; border: 0px; margin:0 10px 0 10px;" >
				</h:commandButton>
			</h:column>
				
			<h:column headerClass="removerEditar">
				<f:facet name="header">
					<h:outputText style="width:113px;"  value="Excluir" />
				</f:facet>
				<h:commandButton  image="/img/lixeira.png" action="#{TipoFuncaoDocenteService.remove(item)}" style="width:20px; height:20px; border: 0px; margin:0 10px 0 10px;;" onclick="return confirm('Confirma exclusão do registro: #{item.nome}?')">
				</h:commandButton>
			</h:column>

			
		</rich:dataTable>
		</ui:define>
	</ui:composition>

</html>